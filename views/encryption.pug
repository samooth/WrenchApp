extends ./layouts/main-layout.pug

block styles
    link(rel='stylesheet', href='../public/css/bootstrap.profile.design.css')

block content
    main.centered
        .card.mb-3.center.center-card.selector.noshadow(style='max-width: 750px;')
            .row.no-gutters
                .col-md-12
                    .card-body
                        h5.card-title Encryption
                        ul.list-unstyled.mt-3.mb-4
                            li ecPrivateKey: #{encryptionDetails.privkey} 
                            p
                            li ecPublicKey: #{encryptionDetails.pubkey}  
                            p
                            li plainText: #{encryptionDetails.plainText}
                            p
                            li encryptedBuffer: #{encryptionDetails.encryptedBuffer}  
                            p
                            li decryptedBuffer: #{encryptionDetails.decryptedBuffer}  
        button
            a(href="/auth/dashboard") Back to dashboard